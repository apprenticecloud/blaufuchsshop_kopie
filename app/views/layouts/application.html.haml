  %body.cnt-home
    / ============================================== HEADER ==============================================
    %header.header-style-1.header-style-2
      / ============================================== TOP MENU ==============================================
      .header-top.animate-dropdown
        .container
          .header-top-inner
            .cnt-account(style='float:right;')
              %ul.list-unstyled.list-inline
                - if user_signed_in?
                  %li
                    = link_to('Logout', destroy_user_session_path, :method => :delete)
                - else
                  %li
                    = link_to('Login', new_user_session_path)
                  %li
                    = link_to('Registrieren', new_user_registration_path)


            .clearfix

      / ============================================== NAVBAR ==============================================
      .header-nav.animate-dropdown.home
        .yamm.navbar.navbar-default{:role => "navigation"}
          .container-class.container
            .navbar-header
              %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "/"}
                .logo
                  %img{src: "/assets/images/logo-p.png", style:"margin-top: -6px; max-width: 178px;"}
              .clearfix
            .nav-bg-class.no-nav-bg
              .navbar-collapse.collapse
                .nav-outer
                  %ul.nav.navbar-nav

                    %li.yamm-fw
                      %a{href: "/"} Shop

                    %li.yamm-fw
                      %a{href: "/contact"} Kontakt

                  - if @admin
                    %a.btn.btn-danger(style='margin: 17px 0 10px 0;' href='/admin') Zum Admin Bereich
                  .clearfix
      / ============================================== NAVBAR : END ==============================================

    - if !flash.empty?
      .container(style='padding-top: 100px;')
        - flash.each do |name, msg|
          = content_tag :div, msg, class: "alert alert-#{name == 'alert' ? 'danger' : 'success'}" if msg.is_a?(String)

    = yield :content
    = yield


    / ============================================== FOOTER ==============================================
    %footer(style="margin-top: 70px;")
      .info-boxes.wow.fadeInUp
        .container
          .info-boxes-inner
            .row
              .col-md-4
                .info-box
                  .row
                    .col-xs-2
                      %span.fa-stack.fa-lg
                        %i.fa.fa-circle.fa-stack-2x
                        %i.fa.fa-truck.fa-stack-1x.fa-inverse
                    .col-xs-10
                      %h4 Kostenlose Lieferung
                      %h6 ohne Mindestbestellwert.
              / .col
              .col-md-4
                .info-box
                  .row
                    .col-xs-2
                      %span.fa-stack.fa-lg
                        %i.fa.fa-circle.fa-stack-2x
                        %i.fa.fa-money.fa-stack-1x.fa-inverse
                    .col-xs-10
                      %h4 Zahlung auf Rechnung
                      %h6 Bequem per Rechnung bezahlen.
              / .col
              .col-md-4
                .info-box
                  .row
                    .col-xs-2
                      %span.fa-stack.fa-lg
                        %i.fa.fa-circle.fa-stack-2x
                        %i.fa.fa-phone.fa-stack-1x.fa-inverse
                    .col-xs-10
                      %h4 Bei Fragen erreichbar
                      %h6 Telefon: 07554 8335

      / ============================================== INFO BOXES : END ==============================================
      .links-social
        .container-class.container
          .links-social-inner
            .link-groups{style: "border-right: none;"}
              .links
                .row
                  .col-md-3
                    %h3.title Shop
                    %ul
                      %li
                        %a{:href => "/"} Shop
                      %li
                        %a{:href => "/contact"} Kontakt
                      - if user_signed_in?
                        %li
                          = link_to('Logout', destroy_user_session_path, :method => :delete)
                      - else
                        %li
                          = link_to('Login', new_user_session_path)
                        %li
                          = link_to('Registrieren', new_user_registration_path)
                  .col-md-3
                    %h3.title Rechtliches
                    %ul
                      %li
                        %a{:href => "/pages/agb"} AGB
                      %li
                        %a{:href => "/pages/bestellvorgang"} Bestellvorgang
                      %li
                        %a{:href => "/pages/versandkosten"} Versandkosten & Lieferung
                      %li
