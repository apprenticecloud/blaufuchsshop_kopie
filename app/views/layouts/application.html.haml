    :css
      .breadcrumb ul {
        float: right;
      }
      .breadcrumb ul li {
        white-space: nowrap;
      }
      header.header-style-2 .header-nav .navbar-nav > li > a {
        color: #434343;
      }
      header.header-style-2 .header-nav .navbar {
        background: white;
        border-bottom: 1px solid rgba(0,0,0,0.1);
      }

      .product-list .product-info .product-stats .price .actual, .product .product-info .price .actual {
        text-decoration: none;
      }

      .product-list .product-info input.txt.txt-qty {
        width: 60px;
        height: 30px;
        border: 1px solid #f2f2f2;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        -ms-border-radius: 3px;
        -o-border-radius: 3px;
        border-radius: 3px;
        padding: 5px 10px;
        text-align: center;
        font-family: 'Roboto', sans-serif;
        font-size: 15px;
        color: #379adc;
        line-height: 18px;
      }

      .product-list .product-info .label {
        font-family: 'Roboto', sans-serif;
        font-size: 14px;
        font-weight: 300;
        color: #666666;
        line-height: 30px;
        padding: 0;
      }

      .myaccount-container .addresses-lists ul.myaccount-link-list li a {
        background: #d9534f;
      }
      .myaccount-container .addresses-lists ul.myaccount-link-list li a:hover {
        background: #E48784;
      }
      .myaccount-container .addresses-lists ul.myaccount-link-list li a i {
        background: #AE423F;
      }
      .sub-total .price, .price .price{
        white-space: nowrap;
      }
      .details .product-desc .description {
        white-space: normal;
      }
      .price .actual {
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        font-weight: light;
        color: #acacac;
        line-height: 36px;
      }
      .body-container .cart-container table tbody tr td.details {
        padding: 15px 15px;
      }
      .description a {
        cursor: pointer;
      }
      footer .info-boxes .info-box {
        cursor: default;
      }
